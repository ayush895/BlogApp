      tags:
      - api
      security:
      - cookieAuth: []
      - basicAuth: []
      - {}
      responses:
        '200':
          content:
            application/vnd.oai.openapi:
              schema:
                type: object
                additionalProperties: {}
            application/yaml:
              schema:
                type: object
                additionalProperties: {}
            application/vnd.oai.openapi+json:
              schema:
                type: object
                additionalProperties: {}
            application/json:
              schema:
                type: object
                additionalProperties: {}
          description: ''
components:
  schemas:
    Blog:
      type: object
      properties:
        id:
          type: integer
          readOnly: true
        title:
          type: string
        author:
          type: string
          readOnly: true
        image_url:
          type: string
          readOnly: true
        content:
          type: string
        status:
          type: string
        created_at:
          type: string
          format: date-time
          readOnly: true
        updated_at:
          type: string
          format: date-time
          readOnly: true
      required:
      - author
      - content
      - created_at
      - id
      - image_url
      - status
      - title
      - updated_at
    BlogCreate:
      type: object
      description: Serializer for creating Blog instances. Accepts an author id to
        assign ownership.
      properties:
        title:
          type: string
          maxLength: 200
        content:
          type: string
        image:
          type: string
          format: uri
          nullable: true
        status:
          $ref: '#/components/schemas/StatusEnum'
        author:
          type: integer
          writeOnly: true
      required:
      - author
      - content
      - title
    Login:
      type: object
      properties:
        username:
          type: string
          maxLength: 150
        password:
          type: string
          writeOnly: true
          minLength: 8
      required:
      - password
      - username
    LoginResponse:
      type: object
      properties:
        message:
          type: string
        user:
          type: object
          additionalProperties: {}
        token:
          type: string
      required:
      - message
      - token
      - user
    PaginatedBlogList:
      type: object
      required:
      - count
      - results
      properties:
        count:
          type: integer
          example: 123
        next:
          type: string
          nullable: true
          format: uri
          example: http://api.example.org/accounts/?page=4
        previous:
          type: string
          nullable: true
          format: uri
          example: http://api.example.org/accounts/?page=2
        results:
          type: array
          items:
            $ref: '#/components/schemas/Blog'
    PatchedBlogUpdate:
      type: object
      description: Serializer for updating Blog instances. Author is not writable
        here.
      properties:
        title:
          type: string
          maxLength: 200
        content:
          type: string
        image:
          type: string
          format: uri
          nullable: true
        status:
          $ref: '#/components/schemas/StatusEnum'
    Register:
      type: object
      properties:
        username:
          type: string
          maxLength: 150
        email:
          type: string
          format: email
        password:
          type: string
          writeOnly: true
          minLength: 8
      required:
      - password
      - username
    RegisterResponse:
      type: object
      properties:
        message:
          type: string
        user:
          type: object
          additionalProperties: {}
        token:
          type: string
      required:
      - message
      - token
      - user
    StatusEnum:
      enum:
      - draft
      - published
      type: string
      description: |-
        * `draft` - Draft
        * `published` - Published
  securitySchemes:
    basicAuth:
      type: http
      scheme: basic
    cookieAuth:
      type: apiKey
      in: cookie
      name: sessionid
